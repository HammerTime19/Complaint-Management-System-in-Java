    private void bloginActionPerformed(java.awt.event.ActionEvent evt) {                                       
       if(jtuser.getText().equals("")){
           JOptionPane.showMessageDialog(null,"Please enter your username");
       }
       else if(jpassword.getText().equals("")){
           JOptionPane.showMessageDialog(null,"Please enter your password");
       }
       else if(jtuser.getText().contains("Kushal")&& jpassword.getText().contains("12345678")){
           JOptionPane.showMessageDialog(null,"Login Successful");
           new Comp().setVisible(true);
            this.setVisible(false);
       }
       else if(jtuser.getText().contains("Admin@123")&& jpassword.getText().contains("12345")){
           JOptionPane.showMessageDialog(null,"Login Successful");
           new Admin().setVisible(true);
            this.setVisible(false);
       }
       else{
           JOptionPane.showMessageDialog(null,"Wrong username or password!!!","Message",JOptionPane.ERROR_MESSAGE);
       }
    }                                      

    private void jcshow_passwordActionPerformed(java.awt.event.ActionEvent evt) {                                                
        if(jcshow_password.isSelected()){
            jpassword.setEchoChar((char)0);
        }
        else{
            jpassword.setEchoChar('*');
    }                                               
    }
    private void bexitActionPerformed(java.awt.event.ActionEvent evt) {                                      
        System.exit(0);
    }                                     
    
